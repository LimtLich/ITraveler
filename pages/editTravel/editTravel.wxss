.travelHead {
  position: absolute;
  width: 100%;
  height: 250px;
  z-index: 9999;
}

.travelHead input {
  position: absolute;
  color: #fff;
}

.travelHead picker {
  position: absolute;
  color: #fff;
}

.travelHead .Head_title {
  top: 48%;
  width: 100%;
  text-align: center;
}

.travelHead .Head_date {
  bottom: 2%;
  left: 2%;
}

.travelHead .Head_place {
  top: 2%;
  left: 2%;
}

.travelHead image {
  width: 100%;
  height: 100%;
}

.paragraph_default {
  /*position: absolute;*/
  margin-top: 260px;
  width: 100%;
  overflow: auto;
}

.paragraph {
  /*position: absolute;*/
  width: 100%;
  overflow: auto;
}

.paragraphText {
  margin: 10px;
  border: 1px solid #dfdfdf;
  border-style: dotted;
}

.paragraphImage{
  margin:20px;
  width:90%;
}

.paragraphImage image{
  width:100%;
}

.addContent {
  width: 50%;
  float: left;
  line-height: 40px;
  text-align: center;
  height: 40px;
  border-top:1px solid #dfdfdf;
  border-bottom: 1px solid #dfdfdf;
}

.icon-chuangjian1 {
  font-size: 24px;
  color: #dfdfdf;
}

.paragraphBox {
  overflow: auto;
  margin-bottom: 50px;
  width: 100%;
}

.content_text {
  z-index: 99999;
  position: fixed;
  top: 30%;
  border: 1px solid #dfdfdf;
  height: 230px;
  background: #fff;
  border-radius: 10px;
  opacity: 0;
}

.content_text button {
  width: 25%;
  margin-left: 15%;
  float: left;
  height: 30px;
  line-height: 30px;
}

.content_text p {
  width: 100%;
  display: inline-block;
  margin: 10px 0 8px 0;
  text-align: center;
}

.content_text textarea {
  border: 1px solid #dfdfdf;
  margin: 10px;
  padding: 5px;
  height: 120px;
  font-size: 14px;
}

.deletePicBtn{
  width:15%;
  height:30px;
  line-height:30px;
  margin-top:-10px;
  margin-bottom:10px;
}

.submitBtn {
  background: #fff;
  position: fixed;
  width: 100%;
  bottom: 0;
  text-align: center;
  border: 1px solid #dfdfdf;
  height: 50px;
  line-height: 50px;
}

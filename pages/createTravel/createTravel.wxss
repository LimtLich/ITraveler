/* pages/createTravel/createTravel.wxss */

view {
  font-family: "幼圆";
}

.upload_img image {
  width: 250px;
  height: 180px;
  margin: 30px 0 20px 6px;
}

.upload_img button {
  background: #fff;
  font-size: 14px;
}

.upload_img span {
  color: lightskyblue;
  font-size: 18px;
}

.submit {
  position: fixed;
  bottom: 0;
  width: 105%;
  margin-left:-5px;
}

.submit span {
  font-size: 16px;
}

.form {
  border-top: 1px solid #dfdfdf;
  width: 100%;
  margin-top: 30px;
}

.form input {
  width: 70%;
  border: 1px solid #dfdfdf;
  margin-top: 10px;
}

.form .picker {
  border: 1px solid #dfdfdf;
  margin-left: 16%;
}

.form span {
  float: left;
}

.form view {
  margin: 40px 30px 0 30px;
}

/* pages/createTravel/createTravel.wxss */

view {
  font-family: "幼圆";
}

.upload_img {
  width: 100%;
  height:320px;
}

.upload_img image {
  width: 100%;
  height:100%;
}

.upload_img .upload_btn {
  margin-top:-65%;
  font-size: 16px;
  background:none;
  width:55%;
  height:170px;
  line-height: 170px;
  border:1px dashed #fff;
  border-width:medium;
  color:#fff;
}

.upload_img span {
  color: lightskyblue;
  font-size: 18px;
}

.submit {
  position: fixed;
  bottom: 0;
  width: 105%;
  margin-left: -5px;
}

.submit span {
  font-size: 16px;
}

.form {
  width: 100%;
}

.form input {
  width: 70%;
  border: 1px solid #dfdfdf;
  margin-top: 10px;
}

.form .picker {
  border: 1px solid #dfdfdf;
  margin-left: 16%;
}

.form span {
  float: left;
}

.form view {
  margin: 40px 30px 0 30px;
}

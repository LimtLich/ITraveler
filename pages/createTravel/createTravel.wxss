/* pages/createTravel/createTravel.wxss */

.upload_img {
  width: 95%;
  height: 260px;
  /*border: 2px solid #dfdfdf;
  border-style: dotted;
  border-radius: 5px;*/
  margin: 2.5% 2.5% 0 2.5%;
}

.upload_img image {
  width: 96%;
  height: 100%;
  margin-left: 2%;
  /*background:#dfdfdf;*/
}

.upload_img .upload_btn {
  margin-top: -65%;
  font-size: 16px;
  width: 100%;
  height: 170px;
  line-height: 170px;
  display: block;
  text-align: center;
  color: #fff;
}

.upload_img span {
  font-size: 80px;
}

.submit {
  position: fixed;
  bottom: 0;
  width: 105%;
  margin-left: -5px;
}

.submit span {
  font-size: 16px;
}

@media screen and (max-width:375px) {
  .form {
    top: 45% !important;
  }
}

.form {
  width: 100%;
  position: fixed;
  left: 2%;
  top: 40%;
}

.form input {
  width: 100%;
  border: 1px solid #dfdfdf;
  border-style: dotted;
  display: inline-block;
  margin-top: 5%;
}

.form .picker {
  border: 1px solid #dfdfdf;
  border-style: dotted;
  margin: 5% 0 0 0;
}

.form view {
  margin: 5% 30px 0 5%;
}
